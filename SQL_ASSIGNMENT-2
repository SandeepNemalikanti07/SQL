select * from tbl_emp_detail_data;

select * from tbl_department_heads;

select t.dept_name,sum(c.salary) as total_salary,
rank() over(order by sum(c.salary) desc) as salary_rank
from tbl_department_heads t
left join tbl_emp_detail_data c  on t.dept_name=c.department
group by t.dept_name
order by total_salary desc;

select * from tbl_project_deatils;

select count(distinct(k.project_name)) as total_projects,f.emp_id,k.emp_id_no,f.first_name
from tbl_emp_detail_data f
left join tbl_project_deatils k
on f.emp_id=k.emp_id_no
group by f.first_name,f.emp_id
having count(distinct(k.project_name))>1;

select f.emp_id_no,count(distinct(f.project_name))as total_projects,k.emp_id,sum(salary) as total_salary,f.status from tbl_project_deatils f
left join tbl_emp_detail_data k on f.emp_id_no=k.emp_id
where status='ongoing'
group by f.project_name,f.emp_id_no
order by total_salary desc;

select 
e.department,e.first_name,e.emp_id,f.dept_name,f.dept_head_id,f.dept_head_name,e.joining_date
from (
select 
emp_id,first_name,department,joining_date,
row_number() over(
partition by department
order by joining_date asc 
) as rn 
from tbl_emp_detail_data
)e
join tbl_department_heads f
on e.department=f.dept_name
where e.rn=1;

select 
e.department,e.first_name,e.emp_id,f.dept_name,f.dept_head_id,f.dept_head_name,e.joining_date
from (
select 
emp_id,first_name,department,joining_date,
row_number() over(
partition by department
order by joining_date asc 
) as rn 
from tbl_emp_detail_data
)e
join tbl_department_heads f
on e.department=f.dept_name
where e.rn=1;

select * from tbl_bonus;

select e.emp_id,e.first_name,e.department,e.salary
from tbl_emp_detail_data e
join (
select department,avg(salary) as avg_salary
from tbl_emp_detail_data
group  by department
) f
on e.department=f.department
where 
e.salary>f.avg_salary
order by e.department,e.salary desc;
select * from tbl_bonus;

select e.emp_id,e.first_name,e.department,e.salary
from tbl_emp_detail_data e
join (
select department,avg(salary) as avg_salary
from tbl_emp_detail_data
group  by department
) f
on e.department=f.department
where 
e.salary>f.avg_salary
order by e.department,e.salary desc;
select * from tbl_bonus;

select e.emp_id,e.first_name,e.department,count(distinct(f.project_id)) as unique_id,avg(datediff(f.start_date,f.end_date)) as avg_diff
from tbl_emp_detail_data e
join tbl_project_deatils f
on e.emp_id=f.emp_id_no
join(
select avg(datediff(start_date,end_date)) as avg_fixx,emp_id_no
from tbl_project_deatils 
group by emp_id_no
) d
on e.emp_id=d.emp_id_no
group by e.emp_id,e.first_name,e.department
order by avg_diff desc,d.avg_fixx;

select 
emp_id,
department,
total_bonus,
rank() over (partition by department order by total_bonus desc) as emp_rank
from (
select 
e.emp_id,
e.department,
sum(b.bonus_amount)as total_bonus
from tbl_emp_detail_data e join tbl_bonus b 
 on e.emp_id=b.emp_id
 group by e.emp_id,e.department
 ) jumaji;
#10 
SELECT 
    emp_id,
    department,
    total_experience,
    RANK() OVER(PARTITION BY department ORDER BY total_experience DESC) AS rank_dep
FROM (
    SELECT 
        e.emp_id,
        e.department,
        COUNT(p.project_name) AS project_count,
        SUM(DATEDIFF(p.end_date, p.start_date)) / 365 AS total_experience
    FROM tbl_emp_detail_data e
    JOIN (
        SELECT * FROM tbl_project_deatils
        WHERE status = 'completed'
    ) p ON e.emp_id = p.emp_id_no
    GROUP BY e.emp_id, e.department
) ra;

#10
with emp_experience as (
select 
e.emp_id,
e.department,
count(p.project_name) as total_project,
sum(datediff(p.end_date,p.start_date)/365) as total_experience
from tbl_emp_detail_data e 
join 
(
select * from tbl_project_deatils 
where status='completed')
p 
on e.emp_id=p.emp_id_no
group by e.emp_id,e.department
),
dept_avg as (
select department,
avg(total_experience) as avg_experience,
rank() over ( order by avg(total_experience)) as dept_rank 
from emp_experience e
group by department
) 
select 
ee.emp_id,
ee.department,
ee.total_experience,
ee.total_project,
rank() over(partition by ee.department order by ee.total_experience desc) as rank_emp_by_rank,
rank() over(partition by ee.department order by ee.total_project desc) as rank_by_project,
da.avg_experience,
da.dept_rank 
from emp_experience ee
join dept_avg da 
on ee.department=da.department 
order by ee.department,da.dept_rank,rank_emp_by_rank;

